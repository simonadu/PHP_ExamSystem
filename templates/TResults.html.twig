{% extends 'base.html.twig' %}

{% block body %}

    <ul>
        <li><a class="active" href="{{ path('teacher') }}">Teacher</a></li>
        <li><a href="{{ path('createQuestion') }}"> Questions </a></li>
        <li><a href="{{ path('createExam') }}"> Exams </a> </li>
        <li><a href="{{ path('teacherResult') }}">Results</a></li>
        <li style="float:right"><a href="{{ path('logout') }}">Log out</a></li>
    </ul>

    <h2> Results</h2>
    <div>
        <table id="customers">
            <thead>
            <tr>
                <th>Exam</th>
                <th>Student</th>
                <th> Score </th>
                <!-- <th> Random questions </th>  -->
            </tr>
            </thead>
            <tbody>
            {% for exam in exams %}
                <tr>
                    <td>{{ exam.name  }} </td>
                    <td> {% if exam.student==null %} for all students
                        {% else %} {{ exam.student.username }}
                        {% endif %}</td>
                    <td>
                        {% if exam.status == false %}
                            {% if exam.student==null %}
                              <a href="{{ path('detailedResult', {'eId': exam.id} ) }}">
                                  results
                              </a>
                            {% else %}
                                not completed
                            {% endif %}
                        {% else %}
                           {{ (exam.result*100) | round }} % <a href="{{ path('viewResult', {'eId': exam.id} ) }}"> <br> details</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}



            </tbody>
        </table>
    </div>


{% endblock %}


