{% extends 'base.html.twig' %}

{% block body %}

    <h2> create exams </h2>

    <div>
        {{ form_start(addExamForm) }}
        {{ form_widget(addExamForm) }}
        {{ form_end(addExamForm) }}
    </div>

    <div>
        <table>
            <thead>
            <tr>
                <th>Field</th>
                <th>Description</th>
                <th> Actions </th>
            </tr>
            </thead>
            <tbody>
            {% for exam in exams %}
                <tr>
                    <td>{{ exam.field.name  }} </td>
                    <td>{{ exam.name }} </td>
                    <td><a href="{{ path('examQuestion', {'eId': exam.id}) }}">Add questions</a>  </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div>
        <a href="{{ path('teacher') }}"> Back </a>
    </div>

    <div>
        <a href="{{ path('logout') }}">Logout</a>
    </div>


{% endblock %}